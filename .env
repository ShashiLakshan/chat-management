# Profile
SPRING_PROFILES_ACTIVE=docker

# Server
SERVER_PORT=8080

# Security
API_KEY=dev-secret
CORS_ALLOWED_ORIGINS=http://localhost:5173

# ==== DB for containers ====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=chat_management
DB_USERNAME=root
DB_PASSWORD=root
DB_SCHEMA=chat_app
# If you prefer a single URL, this one uses service DNS:
DB_URL=jdbc:postgresql://postgres:5432/chat_management?currentSchema=chat_app

# ==== Redis for containers ====
REDIS_HOST=redis
REDIS_PORT=6379

# ==== Rate limit ====
RATE_PER_SEC=1
RATE_BURST=3

# ==== pgAdmin (compose substitution) ====
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
